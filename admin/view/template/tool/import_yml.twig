{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
	<div class="container-fluid">
	<div class="row">
	<div class="col-md-8">
      <h1><img src="view/image/import_yml.png" alt="" /> {{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
	</div>
	<div class="col-md-4" style="text-align: right;">
		<a onclick="$('#form').submit();" class="btn btn-primary"><span><i class="fa fa-upload"></i> {{ button_import }}</span></a>
	</div>
	</div>
    </div>
  </div>
  
  <div class="container-fluid">  
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
      <button type="button" form="form-backup" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
  <div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-exchange"></i> {{ heading_title }}</h3>
    </div>
	<div class="panel-body">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form">
        <table class="form">
          <tr>
            <td colspan="2">{{ entry_description }}</td>
          </tr>
          <tr>
            <td width="25%">{{ entry_restore }}</td>
            <td><input type="file" name="import_yml_upload" /></td>
          </tr>
          <tr>
            <td width="25%">{{ entry_url }}</td>
            <td><input type="text" name="import_yml_url" size="50" value="{{ settings['import_yml_url'] is defined ? settings['import_yml_url'] : '' }}"/></td>
          </tr>
          <tr>
            <td width="25%">{{ entry_update }}</td>
            <td>
              <input type="checkbox" name="import_yml_name" {% if (settings['import_yml_name'] is defined and settings['import_yml_name'] == 'on') %} {{ 'checked="checked"' }} {% endif %}/>{{ entry_field_name }}<br />
              <input type="checkbox" name="import_yml_description" {% if (settings['import_yml_description'] is defined and settings['import_yml_description'] == 'on') %} {{ 'checked="checked"' }} {% endif %}/>{{ entry_field_description }}<br />
			  <input type="checkbox" name="import_yml_category" {% if (settings['import_yml_category'] is defined and settings['import_yml_category'] == 'on') %} {{ 'checked="checked"' }} {% endif %}/>{{ entry_field_category }}<br />
              <input type="checkbox" name="import_yml_price" {% if (settings['import_yml_price'] is defined and settings['import_yml_price'] == 'on') %} {{ 'checked="checked"' }} {% endif %}/>{{ entry_field_price }}<br />
              <input type="checkbox" name="import_yml_image" {% if (settings['import_yml_image'] is defined and settings['import_yml_image'] == 'on') %} {{ 'checked="checked"' }} {% endif %}/>{{ entry_field_image }}<br />
              <input type="checkbox" name="import_yml_manufacturer" {% if (settings['import_yml_manufacturer'] is defined and settings['import_yml_manufacturer'] == 'on') %} {{ 'checked="checked"' }} {% endif %}/>{{ entry_field_manufacturer }}<br />
              <input type="checkbox" name="import_yml_attributes" {% if (settings['import_yml_attributes'] is defined and settings['import_yml_attributes'] == 'on') %} {{ 'checked="checked"' }} {% endif %}/>{{ entry_field_attribute }}<br />
            </td>
          </tr>
    		  <tr>
    		    <td width="25%">{{ entry_force }}</td>
    			  <td><input type="checkbox" name="import_yml_force" {% if (settings['import_yml_force'] is defined and settings['import_yml_force'] == 'on') %} {{ 'checked="checked"' }} {% endif %}/></td>
    		  </tr>
          <tr>
            <td width="25%">{{ entry_save_settings }}</td>
            <td>
              <a onclick="$('#form').attr('action', '{{ save }}'); $('#form').submit();" class="btn btn-primary"><span><i class="fa fa-floppy-o"></i> {{ button_save }}</span></a>
            </td>
          </tr>
        </table>
      </form>
    </div>
  </div>
  </div>
</div>
{{ footer }}